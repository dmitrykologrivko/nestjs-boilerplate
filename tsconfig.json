{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/test",
    "**/e2e",
    "**/*spec.ts",
    "**/*e2e-spec.ts"
  ]
}
