{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "packages",
  "testRegex": "\\.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/",
    "\\.pnp\\.[^\\\/]+$",
    "/dist/"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node"
}
